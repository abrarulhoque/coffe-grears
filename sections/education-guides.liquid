      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "education_guide",
      "name": "Education Guide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Guide Image"
        },
        {
          "type": "text",
          "id": "guide_title",
          "default": "اختيار المطحنة المناسبة",
          "label": "Guide Title (Arabic)"
        },
        {
          "type": "textarea",
          "id": "description",
          "default": "تعرف على أفضل أنواع المطاحن لقهوتك المثالية",
          "label": "Short Description (Arabic)"
        },
        {
          "type": "url",
          "id": "blog_link",
          "label": "Blog Article Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Education Guides",
      "blocks": [
        {
          "type": "education_guide",
          "settings": {
            "guide_title": "اختيار المطحنة المناسبة",
            "description": "تعرف على أفضل أنواع المطاحن لقهوتك المثالية"
          }
        },
        {
          "type": "education_guide",
          "settings": {
            "guide_title": "كيف تضبط الاستخلاص",
            "description": "خطوات بسيطة للحصول على طعم مثالي"
          }
        },
        {
          "type": "education_guide",
          "settings": {
            "guide_title": "دليل الفلاتر",
            "description": "أنواع الفلاتر وتأثيرها على طعم القهوة"
          }
        }
      ]
    }
  ]
}
{% endschema %}