{{ 'section-education-guides.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
        {%- unless section.settings.subtitle == blank -%}
          <p class="education-guides__subtitle">{{ section.settings.subtitle }}</p>
        {%- endunless -%}
      </div>
    {%- endunless -%}

    <div class="education-guides">
      <ul class="education-guides__list grid grid--1-col grid--3-col-tablet" role="list">
        {%- for block in section.blocks -%}
          <li
            id="EducationGuide-{{ section.id }}-{{ forloop.index }}"
            class="education-guides__item grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {{ block.shopify_attributes }}
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
            {% endif %}
          >
            <div class="education-card">
              <div class="education-card__image-wrapper">
                {%- if block.settings.image != blank -%}
                  <div class="education-card__image">
                    {{
                      block.settings.image
                      | image_url: width: 600
                      | image_tag:
                        loading: 'lazy',
                        class: 'education-card__img',
                        sizes: '(min-width: 990px) 33vw, (min-width: 750px) 50vw, 100vw',
                        widths: '165, 360, 535, 750, 1070, 1200'
                    }}
                  </div>
                {%- else -%}
                  <div class="education-card__image education-card__image--placeholder">
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {%- endif -%}
                
                <div class="education-card__overlay">
                  <div class="education-card__content">
                    {%- if block.settings.guide_title != blank -%}
                      <h3 class="education-card__title">{{ block.settings.guide_title }}</h3>
                    {%- endif -%}
                    
                    {%- if block.settings.description != blank -%}
                      <p class="education-card__description">{{ block.settings.description }}</p>
                    {%- endif -%}
                    
                    {%- if block.settings.blog_link != blank -%}
                      <a href="{{ block.settings.blog_link }}" class="education-card__link">
                        <span class="education-card__cta">اقرأ الدليل</span>
                        <span class="education-card__arrow">
                          {{ 'icon-arrow.svg' | inline_asset_content }}
                        </span>
                      </a>
                    {%- endif -%}
                  </div>
                </div>
              </div>
            </div>
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Education Guides",
  "tag": "section",
  "class": "section section-education-guides",
  "max_blocks": 3,
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Mini Brew Guides",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subtitle",
      "default": "Build trust + email magnet tie-in",
      "label": "Subtitle"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        },
        {
          "value": "hxl",
          "label": "Extra large"
        },
        {
          "value": "hxxl",
          "label": "XX-Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "color_scheme",
