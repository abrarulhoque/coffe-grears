{% doc %}
  @prompt
    generate a block to show a footer where i can select the menu from the theme editor, customize the alignement, define if it should be horizontal or vertical and add necessary customization
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-menu-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    border-top: {{ block.settings.border_thickness }}px solid {{ block.settings.border_color }};
  }

  .ai-footer-menu__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-footer-menu__list-{{ ai_gen_id }} {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    {% if block.settings.layout == 'vertical' %}
      flex-direction: column;
      gap: {{ block.settings.item_spacing }}px;
    {% else %}
      flex-direction: row;
      flex-wrap: wrap;
      gap: {{ block.settings.item_spacing }}px {{ block.settings.horizontal_spacing }}px;
    {% endif %}
    justify-content: {{ block.settings.alignment }};
    align-items: {% if block.settings.layout == 'vertical' %}{{ block.settings.alignment }}{% else %}center{% endif %};
  }

  .ai-footer-menu__item-{{ ai_gen_id }} {
    margin: 0;
  }

  .ai-footer-menu__link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    transition: color 0.3s ease;
    display: inline-block;
  }

  .ai-footer-menu__link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
    {% if block.settings.underline_on_hover %}
      text-decoration: underline;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-footer-menu-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-footer-menu__list-{{ ai_gen_id }} {
      {% if block.settings.mobile_layout == 'vertical' %}
        flex-direction: column;
        gap: {{ block.settings.item_spacing }}px;
      {% else %}
        flex-direction: row;
        gap: {{ block.settings.item_spacing }}px {{ block.settings.horizontal_spacing }}px;
      {% endif %}
      justify-content: {{ block.settings.mobile_alignment }};
      align-items: {% if block.settings.mobile_layout == 'vertical' %}{{ block.settings.mobile_alignment }}{% else %}center{% endif %};
    }

    .ai-footer-menu__link-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<footer-menu-{{ ai_gen_id }} class="ai-footer-menu-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-footer-menu__container-{{ ai_gen_id }}">
    {% if block.settings.menu != blank %}
      <nav role="navigation" aria-label="Footer navigation">
        <ul class="ai-footer-menu__list-{{ ai_gen_id }}">
          {% for link in block.settings.menu.links %}
            <li class="ai-footer-menu__item-{{ ai_gen_id }}">
              <a 
                href="{{ link.url }}" 
                class="ai-footer-menu__link-{{ ai_gen_id }}"
                {% if link.current %}aria-current="page"{% endif %}
              >
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    {% else %}
      <div class="ai-footer-menu__empty-state-{{ ai_gen_id }}" style="text-align: center; padding: 20px; color: #999; font-style: italic;">
        Select a menu from the theme editor to display navigation links
      </div>
    {% endif %}
  </div>
</footer-menu-{{ ai_gen_id }}>

<script>
  (function() {
    class FooterMenu{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupAccessibility();
      }

      setupAccessibility() {
        const links = this.querySelectorAll('.ai-footer-menu__link-{{ ai_gen_id }}');
        links.forEach(link => {
          link.addEventListener('focus', function() {
            this.style.outline = '2px solid currentColor';
            this.style.outlineOffset = '2px';
          });
          link.addEventListener('blur', function() {
            this.style.outline = '';
            this.style.outlineOffset = '';
          });
        });
      }
    }

    customElements.define('footer-menu-{{ ai_gen_id }}', FooterMenu{{ ai_gen_id }});
  })();
</script>

